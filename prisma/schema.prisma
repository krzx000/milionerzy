// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Question {
  id            String   @id @default(cuid())
  content       String
  answerA       String
  answerB       String
  answerC       String
  answerD       String
  correctAnswer String   // "A", "B", "C", lub "D"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("questions")
}

model GameSession {
  id                    String   @id @default(cuid())
  status                String   @default("inactive") // "inactive", "active", "paused", "finished"
  currentQuestionIndex  Int      @default(0)
  startTime             DateTime?
  endTime               DateTime?
  gameTime              Int      @default(0) // czas w sekundach
  usedFiftyFifty        Boolean  @default(false)
  usedPhoneAFriend      Boolean  @default(false)
  usedAskAudience       Boolean  @default(false)
  totalQuestions        Int      @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("game_sessions")
}
